@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
<!DOCTYPE HTML>
<html>
	<head>
		<title>
			@{
				string head = "";
				string t, a, al;
				t = a = al = "";
				try
				{
					t = @Model.title;
					a = @Model.artist;
					al = @Model.album;
					head = " | " + Model.title + " - " + Model.artist;
				}catch(Exception)
				{
				}
			}
			Aoba @head
		</title>
		<link rel="icon" href="/res/img/Aoba.ico"/>
		<link rel="shortcut-icon" href="/res/img/Aoba.ico"/>
		<link rel="stylesheet" href="/res/css/main.css"/>
		<link rel="stylesheet" href="/res/css/window.css"/>
		<link rel="stylesheet" href="/res/css/audioPlayer.css"/>
		<meta name="descripton" content="@head">
		<meta property="og:title" content="@t" />
		<meta property="og:type" content="music.song" />
		<meta property="og:description" content="@al - @a" />
		<meta property="og:url" content="https://aobacapture.com/i/@Model.id" />
		<meta property="og:image" content="https://aobacapture.com/i/@Model.id/og" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" type="text/css" href="/res/css/smallerScreen.css" media="only screen and (max-width: 500px)">
		<script src="/res/js/jquery-3.1.1.min.js"></script>
		<script src="/res/js/aurora.js" type="text/javascript"></script>
		<script src="/res/js/flac.js" type="text/javascript"></script>
		<script src="/res/js/mp3.js" type="text/javascript"></script>
		<script src="/res/js/aac.js" type="text/javascript"></script>
		<script src="/res/js/alac.js" type="text/javascript"></script>
		<script src="/res/js/audioPlayer.js" type="text/javascript"></script>
		<script src="/res/js/circle-progress.min.js" type="text/javascript"></script>
	</head>
	<body>
		<div id="windowWrapper">
			<div id="background"></div>
			<div id="window">
				<div id="player" data-uri="@Model.rawUri">
					<div id="art" style="background-image: url(/i/@Model.id/og)">
						<div id="playPause" style="background:url(/res/img/PlayButton.png)"></div>
					</div>
					<div id="loadProgress"></div>
					<div id="info">
						<div id="title">@t</div>
						<div id="artist">@a</div>
						<div id="album">@al</div>
					</div>
					<div id="controls">
						<div id="seek">
							<div id="time">0:00</div>
							<div id="progressBar">
								<div id="progressBarFill"></div>
							</div>
							<div id="timeRemaining">0:00</div>
						</div>
						<div id="volume">
							<div id="mute"></div>
							<div id="volumeSlider">
								<div id="volumeFill"></div>
							</div>
							<div id="volumeValue">80%</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
